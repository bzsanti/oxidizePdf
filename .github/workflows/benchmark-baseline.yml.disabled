name: Create Benchmark Baseline

on:
  workflow_dispatch:
    inputs:
      branch:
        description: 'Branch to create baseline from'
        required: false
        type: string
        default: 'main'

env:
  CARGO_TERM_COLOR: always

jobs:
  create-baseline:
    name: Create Benchmark Baseline
    runs-on: ubuntu-latest
    permissions:
      contents: write
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        ref: ${{ github.event.inputs.branch }}
        
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
      
    - name: Cache dependencies
      uses: actions/cache@v4
      with:
        path: |
          ~/.cargo/registry
          ~/.cargo/git
          target
        key: ${{ runner.os }}-cargo-bench-${{ hashFiles('**/Cargo.lock') }}
        
    - name: Run all benchmarks
      run: |
        echo "Running performance benchmarks..."
        cargo bench --package oxidize-pdf --bench performance_benchmarks

        echo "Running AI chunking benchmarks..."
        cargo bench --package oxidize-pdf --bench ai_chunking

        echo "Running plaintext extraction benchmarks..."
        cargo bench --package oxidize-pdf --bench plaintext_benchmark

        echo "Running OCR benchmarks..."
        cargo bench --package oxidize-pdf --bench ocr_benchmarks

        echo "Running parsing benchmarks..."
        cargo bench --package oxidize-pdf --bench parsing_benchmark

        echo "Running image extraction benchmarks..."
        cargo bench --package oxidize-pdf --bench image_extraction_benchmark

        echo "Running batch processing benchmarks..."
        cargo bench --package oxidize-pdf --bench batch_processing_benchmark

    - name: Create baseline directory
      run: |
        mkdir -p .github/benchmarks/baseline
        cp -r target/criterion/* .github/benchmarks/baseline/
        echo "Baseline created from branch: ${{ github.event.inputs.branch }}" > .github/benchmarks/baseline/info.txt
        echo "Date: $(date)" >> .github/benchmarks/baseline/info.txt
        echo "Commit: $(git rev-parse HEAD)" >> .github/benchmarks/baseline/info.txt
        
    - name: Commit baseline
      run: |
        git config --global user.name 'github-actions[bot]'
        git config --global user.email 'github-actions[bot]@users.noreply.github.com'
        git add .github/benchmarks/baseline
        git commit -m "chore: create benchmark baseline from ${{ github.event.inputs.branch }}
        
        Baseline created for performance comparison
        Branch: ${{ github.event.inputs.branch }}
        Commit: $(git rev-parse HEAD)"
        git push origin ${{ github.ref_name }}
        
    - name: Upload baseline artifact
      uses: actions/upload-artifact@v4
      with:
        name: benchmark-baseline
        path: .github/benchmarks/baseline/